- extends 'base.haml'


- load i18n
- load django_bootstrap_breadcrumbs
- load crispy_forms_tags


- block breadcrumbs
  = block.super
  - breadcrumb "Users" "admin_users_list"
  - breadcrumb object.get_full_name_or_login "admin_user_edit" object.username


- block content

  %form.form-horizontal.well{'method':'post', 'action':'{% url "admin_user_edit" object.username %}'}
    - csrf_token
    = form|crispy
    .controls
      %input.btn{'type':'button', 'value':'{% trans "Cancel" %}', 'onClick':'javascript:history.go(-1);'}
      %input.btn.btn-primary{'type':'submit', 'value':'{% trans "Save" %}'}/
