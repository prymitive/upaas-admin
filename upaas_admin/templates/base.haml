!!! 5


- load i18n
- load compressed
- load django_bootstrap_breadcrumbs


- block breadcrumbs
  - breadcrumb "Home" "index"


%html
  %head
    %title
      uPaaS{% block title %}{% endblock %}
    %meta{'name': 'viewport', 'content':'width=device-width', 'initial-scale':'1.0'}
    %meta{'charset':'utf-8'}
    %meta{'http-equiv':'X-UA-Compatible', 'content':'IE=edge,chrome=1'}

    - compressed_css 'base'

    <!--[if lt IE 9]>
    - compressed_js 'html5shiv'
    <![endif]-->

  %body

    #top-nav.navbar.navbar-inverse.navbar-static-top
      %a.navbar-brand{'href':'#'}
        uPaaS
      .nav-collapse.collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav.pull-right
          - if user.is_authenticated
            %li.dropdown
              %a.dropdown-toggle{'role':'button', 'data-toggle':'dropdown', 'href':'#'}
                %strong
                  = user.username
                %span.caret
              %ul.dropdown-menu{'role':'menu'}
                %li
                  %a{'href':'#'}
                    - trans "My Profile"
          %li
            - if user.is_authenticated
              %a{'href':'{% url "django.contrib.auth.views.logout_then_login" %}'}
                - trans "Log out"
            - else
              %a{'href':'{% url "django.contrib.auth.views.login" %}'}
                - trans "Log in"

    .container

    - render_breadcrumbs

    - block content

    - compressed_js 'base'

    - block js_bottom
