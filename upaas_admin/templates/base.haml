- load i18n
- load compressed
- load django_bootstrap_breadcrumbs


- block breadcrumbs
  - breadcrumb_for "site_index"
    %i.icon-home
    Home
  - endbreadcrumb_for


%html
  %head
    %title
      uPaaS{% block title %}{% endblock %}
    %meta{'name': 'viewport', 'content':'width=device-width', 'initial-scale':'1.0'}
    %meta{'charset':'utf-8'}
    %meta{'http-equiv':'X-UA-Compatible', 'content':'IE=edge,chrome=1'}

    - compressed_css 'base'

    <!--[if lt IE 9]>
    - compressed_js 'html5shiv'
    <![endif]-->

  %body

    .navbar.navbar-static-top
      .navbar-inner
        .container
          %a.brand{'href':'#'}
            %i.icon-cogs
            uPaaS
          .nav-collapse.collapse
            %ul.nav.pull-right
              %li.dropdown
                %a.dropdown-toggle{'role':'button', 'data-toggle':'dropdown', 'href':'#'}
                  %strong
                    - if user.first_name and user.last_name
                      ={ user.first_name } ={ user.last_name }
                    - else
                      = user.username
                  %span.caret
                %ul.dropdown-menu{'role':'menu'}
                  %li
                    %a{'href':'{% url "users_profile" %}'}
                      - trans "Account"
              %li
                %a{'href':'{% url "django.contrib.auth.views.logout_then_login" %}'}
                  %i.icon-off
                  - trans "Log out"

    .container

      - render_breadcrumbs

      - if messages
        - for message in messages
          .alert{'class':'alert-={message.tags}'}
            %button.close{'type':'button', 'data-dismiss':'alert'}Ã—
            = message

      .upaas-content
        - block content

    - compressed_js 'base'

    - block js_bottom
