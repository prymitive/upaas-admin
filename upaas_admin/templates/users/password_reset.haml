- load i18n
- load crispy_forms_tags


%html
  %head
    - include "partials/site_head.html"

  %body
    .container
      .row
        .page-header
          %h1.text-center
            %i.fa.fa-lock
            - trans "Please enter the email address to reset your password"

        .col-md-6.col-md-offset-3
          %form.well{'method':'post', 'action':'{% url "django.contrib.auth.views.password_reset" %}'}
            - csrf_token
            = form|crispy
            .controls
              %input.btn.btn-danger{'type':'submit', 'value':'{% trans "Reset" %}'}/
