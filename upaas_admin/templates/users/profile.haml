- extends 'base.haml'


- load i18n
- load django_bootstrap_breadcrumbs
- load gravatar


- block breadcrumbs
  = block.super
  - breadcrumb user.full_name_or_login "users_profile"


- block content

  .tabbable

    %ul.nav.nav-tabs
      %li.active
        %a{'href':'#details', 'data-toggle':'tab'}
          - trans "Details"
      %li
        %a{'href':'#apikey', 'data-toggle':'tab'}
          - trans "API key"
      %li
        %a{'href':'#budget', 'data-toggle':'tab'}
          - trans "Budget"

    .tab-content

      #details.tab-pane.active
        .row
          .col-md-2.text-center
            %img.img-rounded{'src':'{% gravatar_url user.email 120 %}', 'height':'120', 'width':'120'}
              %a{'href':'https://gravatar.com', 'target':'_blank'}
                - trans "Change avatar"
          .col-md-10
            %dl.dl-horizontal
              %dt
                {% trans "First name" %}:
              %dd
                = user.first_name

              %dt
                {% trans "Last name" %}:
              %dd
                = user.last_name

              %dt
                {% trans "Login" %}:
              %dd
                = user.username

              %dt
                {% trans "Email" %}
              %dd
                = user.email

              %dt
                {% trans "Administrator" %}:
              %dd
                - if user.is_superuser
                  %span.glyphicon.glyphicon-thumbs-up
                - else
                  %span.glyphicon.glyphicon-thumbs-down

      #apikey.tab-pane
        .form-horizontal{'role':'form'}
          .form-group
            %label.col-md-2.control-label{'for':'apikey-input'}
              - trans "Api key"
              %span#help-apikey.glyphicon.glyphicon-question-sign{'title':'{% trans "API key is used for accessing uPaaS using cli client" %}'}
              :
            .col-md-8
              %input.form-control{'id':'apikey-input','type':'text', 'readonly':'readonly', 'value': '={ user.apikey }'}
            %button.btn.btn-default{'id':'copy-button', 'data-clipboard-text':'={ user.apikey }'}
              %span.glyphicon.glyphicon-file

        .text-center
          %a.btn.btn-danger{'href':'{% url "users_apikey_reset" %}'}
            - trans "Reset API key"

      #budget.tab-pane
        %dl.dl-horizontal
          %dt
            {% trans "Application limit" %}
            %span#help-apps_count.glyphicon.glyphicon-question-sign{'title':'{% trans "Maximum number of running applications" %}'}
            :
          %dd
            - if user.budget.apps_count
              = user.budget.apps_count
            - else
              - trans "no limit"

          %dt
            {% trans "Worker limit" %}
            %span#help-worker_limit.glyphicon.glyphicon-question-sign{'title':'{% trans "Maximum number of workers for all running applications" %}'}
            :
          %dd
            ={ user.budget.worker_limit }

          %dt
            {% trans "Memory limit" %}
            %span#help-memory_limit.glyphicon.glyphicon-question-sign{'title':'{% trans "Maximum amount of memory that can be allocated to all running applications" %}'}
            :
          %dd
            ={ user.budget.memory_limit } MB

  - block js_bottom
    = block.super

    - include "partials/load_zeroclipboard.haml"

    :javascript
      $(document).ready(function(){
        var clip = new ZeroClipboard($('button#copy-button'));
        var cliptip = $(clip.htmlBridge)
          .tooltip({'title': '{% trans "Copy to clipboard" %}'});
        clip.on('mouseover', function(client) {
          cliptip.attr('title', '{% trans "Copy to clipboard" %}')
            .tooltip('fixTitle')
            .tooltip('show');
        });
        clip.on('complete', function(client, args) {
          cliptip.attr('title', '{% trans "Copied" %}')
            .tooltip('fixTitle')
            .tooltip('show');
        });
        $('#help-apikey').tooltip({container:'.upaas-content'});
        $('#help-apps_count').tooltip({container: '.upaas-content'});
        $('#help-memory_limit').tooltip({container: '.upaas-content'});
        $('#help-worker_limit').tooltip({container: '.upaas-content'});
      });
