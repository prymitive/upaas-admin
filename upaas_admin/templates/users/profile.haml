- extends 'base.haml'


- load i18n
- load django_bootstrap_breadcrumbs


- block breadcrumbs
  = block.super
  - breadcrumb user.get_full_name_or_login "users_profile"


- block content

  %dl.dl-horizontal

    %dt
      {% trans "First name" %}:
    %dd
      = user.first_name

    %dt
      {% trans "Last name" %}:
    %dd
      = user.last_name

    %dt
      {% trans "Login" %}:
    %dd
      = user.username

    %dt
      {% trans "Administrator" %}:
    %dd
      - if user.is_superuser
        %i.icon-thumbs-up-alt
      - else
        %i.icon-thumbs-down-alt

