- extends 'base.haml'


- load i18n
- load django_bootstrap_breadcrumbs


- block breadcrumbs
  = block.super
  - breadcrumb user.get_full_name_or_login "users_profile"


- block content

  .tabbable

    %ul.nav.nav-tabs
      %li.active
        %a{'href':'#details', 'data-toggle':'tab'}
          - trans "Details"
      %li
        %a{'href':'#apikey', 'data-toggle':'tab'}
          - trans "Api key"

    .tab-content

      #details.tab-pane.active
        %dl.dl-horizontal
          %dt
            {% trans "First name" %}:
          %dd
            = user.first_name

          %dt
            {% trans "Last name" %}:
          %dd
            = user.last_name

          %dt
            {% trans "Login" %}:
          %dd
            = user.username

          %dt
            {% trans "Email" %}
          %dd
            = user.email

          %dt
            {% trans "Administrator" %}:
          %dd
            - if user.is_superuser
              %i.icon-thumbs-up-alt
            - else
              %i.icon-thumbs-down-alt

      #apikey.tab-pane
        %dl.dl-horizontal
          %dt
            {% trans "Api key" %}:
          %dd
            = user.apikey
