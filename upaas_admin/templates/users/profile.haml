- extends 'base.haml'


- load i18n
- load django_bootstrap_breadcrumbs
- load gravatar


- block breadcrumbs
  = block.super
  - breadcrumb user.get_full_name_or_login "users_profile"


- block content

  .tabbable

    %ul.nav.nav-tabs
      %li.active
        %a{'href':'#details', 'data-toggle':'tab'}
          - trans "Details"
      %li
        %a{'href':'#apikey', 'data-toggle':'tab'}
          - trans "API key"

    .tab-content

      #details.tab-pane.active
        .pull-left
          %img{'src':'{% gravatar_url user.email 120 %}', 'class':'img-rounded', 'height':'120', 'width':'120'}
        .pull-left
          %dl.dl-horizontal
            %dt
              {% trans "First name" %}:
            %dd
              = user.first_name

            %dt
              {% trans "Last name" %}:
            %dd
              = user.last_name

            %dt
              {% trans "Login" %}:
            %dd
              = user.username

            %dt
              {% trans "Email" %}
            %dd
              = user.email

            %dt
              {% trans "Administrator" %}:
            %dd
              - if user.is_superuser
                %i.icon-thumbs-up-alt
              - else
                %i.icon-thumbs-down-alt

      #apikey.tab-pane
        %dl.dl-horizontal
          %dt
            {% trans "Api key" %}:
          %dd
            = user.apikey

        .text-center
          %a.btn.btn-danger{'href':'{% url "users_apikey_reset" %}'}
            - trans "Reset API key"
