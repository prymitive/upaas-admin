- load i18n
- load crispy_forms_tags


%html
  %head
    - include "partials/site_head.html"

  %body

    .container

      .row
        .page-header
          %h1.text-center
            %i.fa.fa-lock
            - trans "You need to login to access this page"

        .col-md-6.col-md-offset-3
          %form.well{'method':'post', 'action':'{% url "django.contrib.auth.views.login" %}'}
            - csrf_token
            = form|crispy
            %input{'type':'hidden', 'name':'next', 'value':'={ next }'}/
            .controls
              %a.btn.btn-default{'href':'{% url "password_reset" %}'}
                - trans "Reset password"
              %input.btn.btn-primary.pull-right{'type':'submit', 'value':'{% trans "Login" %}'}/
