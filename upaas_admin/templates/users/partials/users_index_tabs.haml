- load i18n

.tabbable

  %ul.nav.nav-tabs
    - for tab in tabs
      %li{'id':'upaas-app-{{ app.safe_id }}-tab-{{ tab.tab_id }}', 'class':'{% if tab.tab_id == current_tab_id %}active{% endif %}'}
        %a{'href':'{% url tab.tab_id %}'}
          - if tab.tab_id == 'app_register'
            %i.fa.fa-plus
          = tab.tab_label
          - if tab.tab_id == 'site_index'
            - with user.applications.count as apps_count
              %span.badge{'class': 'upaas-user-badge-apps{% if not apps_count %} hidden{% endif %}'}
                = apps_count
          - if tab.tab_id == 'users_tasks'
            - with user.running_tasks.count as tasks_count
              %span.badge{'class': 'upaas-user-badge-tasks{% if not tasks_count %} hidden{% endif %}'}
                = tasks_count
  .tab-content
