!!! 5


- load i18n
- load compressed
- load crispy_forms_tags


%html
  %head
    %title
      uPaaS{% block title %}{% endblock %}
    %meta{'name': 'viewport', 'content':'width=device-width', 'initial-scale':'1.0'}
    %meta{'charset':'utf-8'}
    %meta{'http-equiv':'X-UA-Compatible', 'content':'IE=edge,chrome=1'}

    - compressed_css 'base'

    <!--[if lt IE 9]>
    - compressed_js 'html5shiv'
    <![endif]-->

  %body

    .container

      .row
        .page-header
          %h1
            - trans "You need to login to access this page"

        %form{'method':'post', 'action':'{% url "django.contrib.auth.views.login" %}', 'class':('form-horizontal', 'well')}
          - csrf_token
          = form|crispy
          %input{'type':'hidden', 'name':'next', 'value':'={ next }'}/
          .controls
            %input{'type':'submit', 'value':'{% trans "Login" %}', 'class':('btn', 'btn-primary')}/

    - compressed_js 'base'
