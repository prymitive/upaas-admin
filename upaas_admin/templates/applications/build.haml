- extends 'applications/base.html'


- load i18n
- load django_bootstrap_breadcrumbs
- load crispy_forms_tags


- block breadcrumbs
  = block.super
  - breadcrumb "Build package" "build_package" app.safe_id


- block app_content

  .well

    %p
      - trans "Forcing fresh package will result in package created from scratch, using empty system image."
      - trans "All required system packages will be reinstalled."

    - crispy form
