- extends 'applications/base.haml'


- load i18n


- block app_content

  %dl.dl-horizontal

    %dt
      {% trans "Name" %}:
    %dd
      = app.name

    %dt
      {% trans "Interpreter" %}:
    %dd
      ={ app.interpreter_name } ={ app.interpreter_version }

    %dt
      {% trans "System domain" %}:
    %dd
      %a{'href':'http://={ app.system_domain }', 'target':'_blank'}
        = app.system_domain

    %dt
      {% trans "Custom domains" %}:
    %dd
      - for domain in app.domains
        %a{'href':'={ domain }', 'target':'_blank'}
          = domain
      - empty
        .muted
          - trans "None"
