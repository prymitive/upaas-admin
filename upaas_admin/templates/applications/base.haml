- extends 'site.html'


- load i18n
- load django_bootstrap_breadcrumbs


- block breadcrumbs
  = block.super
  - breadcrumb app.name "app_details" app.safe_id


- block content

  .row.visible-xs
    .col-md-12
      .btn-group.pull-right
        %button.btn.btn-default.btn-md.dropdown-toggle{'type':'button', 'data-toggle': 'dropdown'}
          %i.fa.fa-gear
          - trans "Actions"
          &nbsp;
          %span.caret
        %ul.dropdown-menu.pull-right{'role': 'menu'}
          - include "applications/partials/app_actions.html"

  %p.visible-xs

  .row
    .col-md-9

      - if tabs
        - include "applications/partials/app_tabs.html"

      - block app_content

    .col-md-3.hidden-xs
      .panel.panel-default
        .panel-heading
          - trans "Actions"
        .panel-body
          %ul.nav.nav-pills.nav-stacked
            - include "applications/partials/app_actions.html"

- block js_bottom
  = block.super
