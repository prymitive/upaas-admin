- extends 'site.html'


- load i18n
- load django_bootstrap_breadcrumbs
- load gravatar


- block breadcrumbs
  = block.super
  - breadcrumb app.name "app_details" app.safe_id


- block content

  .col-md-9

    - include "applications/partials/app_tabs.html"

    - block app_content

  .col-md-3
    .panel.panel-default
      .panel-heading
        - trans "Actions"
      .panel-body
        %ul.nav.nav-pills.nav-stacked
          %li
            %a{'href':'{% url "build_package" app.safe_id %}'}
              %i.fa.fa-cog
              - trans "Build new package"
          %li{'class':'{% if not app.can_start %}disabled{% endif %}'}
            %a{'href':'{% if app.can_start %}{% url "app_start" app.safe_id %}{% else %}#{% endif %}'}
              %i.fa.fa-play
              - trans "Run application"
          %li{'class':'{% if not app.run_plan %}disabled{% endif %}'}
            %a{'href':'{% if app.run_plan %}{% url "app_edit_run_plan" app.safe_id %}{% else %}#{% endif %}'}
              %i.fa.fa-pencil
              - trans "Edit application"
          %li{'class':'{% if not app.run_plan %}disabled{% endif %}'}
            %a{'href':'{% if app.run_plan %}{% url "app_stop" app.safe_id %}{% else %}#{% endif %}'}
              %i.fa.fa-stop
              - trans "Stop application"

- block js_bottom
  = block.super
