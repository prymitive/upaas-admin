- extends 'site.html'


- load i18n
- load django_bootstrap_breadcrumbs
- load gravatar


- block breadcrumbs
  = block.super
  - breadcrumb pkg.application.name "app_details" pkg.application.safe_id
  - breadcrumb pkg.safe_id "package_details" pkg.safe_id


- block content

  %dl.dl-horizontal

    %dt
      {% trans "Created" %}:
    %dd
      = pkg.date_created

    %dt
      {% trans "Interpreter name" %}:
    %dd
      = pkg.interpreter_name

    %dt
      {% trans "Interpreter version" %}:
    %dd
      = pkg.interpreter_version

    %dt
      {% trans "Size" %}:
    %dd
      = pkg.bytes|filesizeformat

    %dt
      {% trans "Builder" %}:
    %dd
      = pkg.builder

    %dt
      {% trans "Distribution name" %}:
    %dd
      = pkg.distro_name

    %dt
      {% trans "Distribution version" %}:
    %dd
      = pkg.distro_version

    %dt
      {% trans "Architecture" %}:
    %dd
      = pkg.distro_arch
