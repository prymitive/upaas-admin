- extends 'applications/base.html'


- load i18n


- block app_content

  %table.table.table-striped

    %thead
      %tr
        %th
          - trans "Status"
        %th
          - trans "Created"
        %th
          - trans "Title"

    %tbody
      - for task in app.active_tasks
        %tr
          %td
            - if task.is_pending
              %i.upaas-help-tooltip{'class':'={ task.icon_class }', 'title':'{% trans "Task is waiting to be started" %}'}
            - else
              %i{'class':'={ task.icon_class }'}
          %td
            %a{'href':'{% url "app_task_details" task.safe_id %}'}
              = task.date_created
          %td
            = task.title
      - empty
        %tr
          %td.text-center{'colspan':'4'}
            - trans "No active tasks"

  - include "partials/pagination_footer.html"
