- extends 'applications/base.html'


- load i18n


- block app_content

  %table.table

    %thead
      %tr
        %th
        %th
          - trans "Title"
        %th
          - trans "Created"
        %th
          - trans "Backend"

    %tbody
      - for task in tasks
        %tr{'id':'={ task.safe_id }'}
          %td
            %i{'class':'={ task.icon_class } ={ task.css_class }'}
          %td
            = task.title
          %td
            %a{'href':'{% url "app_task_details" task.safe_id %}'}
              = task.date_created
          %td
            = task.backend.name

      - empty
        %tr
          %td.text-center{'colspan':'4'}
            - trans "No tasks"

  - include "partials/pagination_footer.html"
