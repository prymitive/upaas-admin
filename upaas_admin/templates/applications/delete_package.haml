- extends 'applications/base.html'


- load i18n
- load django_bootstrap_breadcrumbs
- load crispy_forms_tags


- block breadcrumbs
  = block.super
  - breadcrumb "Packages" "app_packages" pkg.application.safe_id
  - breadcrumb pkg.safe_id "package_details" pkg.safe_id
  - breadcrumb "Delete" "package_delete" pkg.safe_id


- block app_content

  %form.well{'method':'post', 'action':'{% url "package_delete" pkg.safe_id %}'}
    - csrf_token
    %p
      - trans "Are you sure you want to delete this package?"
    .controls
      %button.btn.btn-default{'type':'button', 'onClick':'javascript:history.go(-1);'}
        %i.fa.fa-reply
        - trans "Cancel"
      %input.btn.btn-danger{'type':'submit', 'value':'{% trans "Delete" %}'}/
